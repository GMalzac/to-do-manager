<h1>My TO DO List</h1>

<div class="row tab-heads" style="text-align: center">
  <div class="col-xs-1">
    <h2>Done?</h2>
  </div>
  <div class="col-xs-3">
    <h2>Task</h2>
  </div>
  <div class="col-xs-4">
    <h2>Description</h2>
  </div>
  <div class="col-xs-1">
    <h2>Category</h2>
  </div>
  <div class="col-xs-1">
    <h2>Priority</h2>
  </div>
  <div class="col-xs-1">
    <h2>Deadline</h2>
  </div>
  <div class="col-xs-1">
    <h2>Actions</h2>
  </div>
</div>

<% @tasks.each do |task| %>
  <div class="row tab-line">
    <div class="col-xs-1 tab-cell", style="text-align: center">
      <% if task.done %>
        <%= link_to "", switch_done_path(task), class:"fas fa-check-circle done"%>
      <% else %>
        <%= link_to "", switch_done_path(task), class:"far fa-check-circle not-done"%>
      <% end %>
    </div>
    <div class="col-xs-3 tab-cell">
      <h3> <%= task.name %> </h3>
    </div>
    <div class="col-xs-4 tab-cell">
      <p><%= task.description %> </p>
    </div>
    <div class="col-xs-1 tab-cell" style="text-align: center">
      <p><%= task.category %> </p>
    </div>
    <div class="col-xs-1 tab-cell"  style="text-align: center">
      <p><%= task.priority %> </p>
    </div>
    <div class="col-xs-1 tab-cell" style="text-align: center">
      <p><%= task.deadline %> </p>
    </div>
    <div class="col-xs-1 tab-cell" style="text-align: center">
      <p><%= link_to "", edit_task_path(task.id), class:"fas fa-edit fa-lg" %> </p>
      <p><%= link_to "", task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' }, class:"fas fa-trash-alt fa-lg delete-icon" %> </p>
    </div>
  </div>
<% end %>

<br>

<div style="text-align: right">
  <button type="button" class="add-button btn-success">
    <%= link_to "", new_task_path, class:"fas fa-plus fa-2x" %>
  </button>
</div>
